    "cross-env": "^7.0.3",
    "esbuild": "^0.19.11",
    "front-matter": "^4.0.2",
    "isbot": "^4.1.1",
    "mdx-bundler": "^10.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-highlight": "^7.0.0",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@remix-run/serve": "^1.19.3",
    "@tailwindcss/typography": "^0.5.4",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.34",
    "eslint": "^8.20.0",
    "npm-run-all": "^4.1.5",
    "styled-components": "^5.3.5",
